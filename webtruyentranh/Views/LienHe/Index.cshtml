@using webtruyentranh.Models
@using PagedList.Mvc;
@model PagedList.PagedList<LienHe>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var keyword = TempData["kwd"];
}




<div class="col-12">
    <div class="card">
    

        <div class="table-responsive">
            <div style="display:inline-block;width:100%">
                <div style="float:right">
                    <form action="/Lienhe/TimKiem" method="post">
                        <input type="text" name="keyword" style="color:inherit" />
                        <button type="submit" style="color:inherit">Tìm kiếm</button>
                    </form>
                </div>
            </div>
            <table class="table table-hover"  style="border:double">
                <thead>
                    <tr>
                        <th  style="border:double" class="border-top-0"> Họ Tên</th>
                        <th  style="border:double" class="border-top-0"> Địa Chỉ</th>
                        <th  style="border:double" class="border-top-0"> Email</th>
                        <th  style="border:double" class="border-top-0"> Số Điện Thoại</th>
                        <th  style="border:double" class="border-top-0"> góp ý</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td  style="border:double" class="txt-oflo">
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td  style="border:double">
                                <span class="label label-success label-rounded">
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </span>
                            </td>
                            <td style="border:double">
                                <span class="label label-purple label-rounded">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </span>
                            </td>
                            <td  style="border:double">
                                <span class="label label-danger label-rounded">
                                    @Html.DisplayFor(modelItem => item.DienThoai)
                                </span>
                            </td>
                            <td  style="border:double">

                                @Html.DisplayFor(modelItem => item.GopY)

                            </td>
                            <td  style="border:double">
                                <span class="font-medium">

                                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaLienHe }) |
                                    @Html.ActionLink("Xoá", "Delete", new { id = item.MaLienHe })
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="pagination pagination-small pagination-centered" align="center">
    <ul>

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))

    </ul>
</div>

<style>
    .menutrang li {
        display: inline;
    }
</style>
