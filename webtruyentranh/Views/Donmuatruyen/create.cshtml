@model webtruyentranh.Models.DonMuaTruyen

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h3 class="card-title">Create Form</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form class="form-horizontal mt-4">
                    <div class="form-group">
                        <b>Độc giả:</b>
                        @Html.EditorFor(model => model.DocGia.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DocGia.HoTen, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Ngày đặt:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                        <input type="date" name="NgayDat" />

                    </div>
                    <div class="form-group">
                        <b>Ngày giao:</b>&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="date" name="NgayGiao" />
                    </div>
                    <div class="form-group">
                        <b>Tình trạng giao hàng:</b>
                        @Html.EditorFor(model => model.Tinhtranggiaohang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tinhtranggiaohang, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Đã thanh toán:</b>
                        @Html.EditorFor(model => model.Dathanhtoan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Dathanhtoan, "", new { @class = "text-danger" })
                    </div>
                   
                  
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="@Url.Action("Index","Donmuatruyen")" style="background-color: #dc3545; border-radius: 15px" class="btn btn-default">Quay trở lại</a>
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            }
          
        </div>

    </div>
</div>

