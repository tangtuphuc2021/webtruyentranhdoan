@model webtruyentranh.Models.HinhAnh

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div>

    <hr />
    <dl class="dl-horizontal">
        <dd>
            &emsp;<b>Tên Truyện:</b>
            @Html.DisplayFor(model => model.TenTruyen)
        </dd>
        <dd>
            &emsp;<b>Mã Truyện:</b>
            @Html.DisplayFor(model => model.MaTruyen)
        </dd>
        <dd>
            &emsp;<b>Mã Chap:</b>
            @Html.DisplayFor(model => model.MaChap)
        </dd>
        <dd>
            &emsp;<b>Chương Số:</b>
            @Html.DisplayFor(model => model.ChuongSo)
        </dd>
        <dd>
            <b>Hình Ảnh Chương Truyện: </b>
            <img src="@Url.Content("~/ChapHinh/"+  Model.HaChap)" width="120" />

        </dd>

    </dl>
</div>


<div class="form-actions no-color">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            &emsp; &emsp; &emsp;<a href="@Url.Action("Edit","Chuonghinh", new {id = Model.MaHinhAnh })" style="background-color:#00266f; border-radius:15px" class="btn btn-default">Sửa</a>

            &emsp; &emsp; &emsp;<a href="@Url.Action("Index","Chuonghinh")" style="background-color:#dc3545; border-radius:15px" class="btn btn-default">Trở về</a>

        </div>
    </div>
</div>


<style>
    dt {
        margin: 0 50px;
    }

    dd {
        margin: 0 50px;
    }

    p {
        margin: 0 50px;
    }
</style>