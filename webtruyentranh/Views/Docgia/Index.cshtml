@using webtruyentranh.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DocGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var keyword = TempData["kwd"];
}


<div class="col-12">
    <div class="card">
        <div class="card-body">
            @Html.ActionLink("Thêm mới", "Create")
        </div>
        <div class="table-responsive">
            <div style="display:inline-block;width:100%">
                <div style="float:right">
                    <form action="/Docgia/TimKiem" method="post">
                        <input type="text" name="keyword" style="color:inherit" />
                        <button type="submit" style="color:inherit">Tìm kiếm</button>
                    </form>
                </div>
            </div>
            <table class="table table-hover" style="border:double">

                <thead>
                    <tr style="border:double">
                        <th style="border:double" class="border-top-0"> Họ tên</th>
                        <th style="border:double" class="border-top-0">Tài khoản</th>
                        <th style="border:double" class="border-top-0"> Mật khẩu</th>
                        <th style="border:double" class="border-top-0"> Email</th>
                        <th style="border:double" class="border-top-0">Địa chỉ</th>
                        <th style="border:double" class="border-top-0"> Điện thoại</th>
                        <th style="border:double" class="border-top-0">Ngày sinh</th>
                        <th style="border:double" class="border-top-0"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td style="border:double" class="txt-oflo"> @Html.DisplayFor(modelItem => item.HoTen)</td>
                            <td style="border:double" class="txt-oflo">@Html.DisplayFor(modelItem => item.Taikhoan)</td>
                            <td style="border:double" class="txt-oflo">@Html.DisplayFor(modelItem => item.Matkhau)</td>
                            <td style="border:double"><span class="label label-info label-rounded"> @Html.DisplayFor(modelItem => item.Email)</span> </td>
                            <td style="border:double"><span class="label label-success label-rounded"> @Html.DisplayFor(modelItem => item.Diachi)</span> </td>
                            <td style="border:double"><span class="label label-danger label-rounded"> @Html.DisplayFor(modelItem => item.Dienthoai)</span> </td>
                            <td style="border:double"><span class="label label-purple label-rounded"> @String.Format("{0:dd/MM/yyyy}", item.Ngaysinh) </span>  </td>
                            <td style="border:double">
                                <span class="font-medium">
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaDG }) |
                                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaDG }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaDG })
                                </span>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="pagination pagination-small pagination-centered" align="center">
    <ul>

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))

    </ul>
</div>

<style>
    .menutrang li {
        display: inline;
    }
</style>
