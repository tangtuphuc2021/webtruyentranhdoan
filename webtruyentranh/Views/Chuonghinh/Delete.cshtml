@model webtruyentranh.Models.HinhAnh

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h3>Bạn có thật sự muốn xóa ?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">

        <dd>
            <b>Tên Truyện:</b>
            @Html.DisplayFor(model => model.TenTruyen)
        </dd>

        <dd>
            <b>Mã Truyện:</b>
            @Html.DisplayFor(model => model.MaTruyen)
        </dd>


        <dd>
            <b>Mã Chap:</b>
            @Html.DisplayFor(model => model.MaChap)
        </dd>
        <dd>
            <b>Chương Số:</b>
            @Html.DisplayFor(model => model.ChuongSo)
        </dd>
        <dd>
            <div class="form-group">
                <b>Hình ảnh chương:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <div class=" col-md-10">
                    <div class="col-md-10">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <img src="@Url.Content("~/ChapHinh/"+Model.HaChap)" width="120" />
                        @*Thong bao trung*@
                        @ViewBag.Thongbao
                    </div>

                </div>
            </div>
        </dd>





    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    &emsp; &emsp; &emsp;<a href="@Url.Action("Index","Chuonghinh")" style="background-color:#dc3545; border-radius:15px" class="btn btn-default">Trở về</a>
                    <input type="submit" value="Delete" class="btn btn-default" style="background-color:#00266f; border-radius:15px" />

                </div>
            </div>
        </div>

    }

</div>
<style>
    dt {
        margin: 0 50px;
    }

    dd {
        margin: 0 50px;
    }
</style>