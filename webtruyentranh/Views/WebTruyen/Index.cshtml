
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2></h2>

<div class="container-fluid pt-3">
    <div class="container animate-box" data-animate-effect="fadeIn">
        <div>
            <div class="fh5co_  heading fh5co_heading_border_bottom py-2 mb-4">Trending</div>
        </div>
        <div class="owl-carousel owl-theme js" id="slider1">
            @foreach (var truyen in Model)
            {
            <div class="item px-2">
                <a href="@Url.Action("Chitiettruyen","WebTruyen",new {id=truyen.MaTruyen })">
                <div class="fh5co_latest_trading_img_position_relative">
                    <div class="fh5co_latest_trading_img">
                        <img src="~/HinhAnh/@truyen.Anhbia" 
                             class="fh5co_img_special_relative" />
                    </div>
                    <div class="fh5co_latest_trading_img_position_absolute"></div>
                    <div class="fh5co_latest_trading_img_position_absolute_1">
                        <a href="single.html" class="text-white"> @truyen.TenTruyen </a>
                        <div class="fh5co_latest_trading_date_and_name_color"> Chương 1016</div>
                    </div>
                </div>
                </a>
            </div>
            }

        </div>
    </div>
</div>
