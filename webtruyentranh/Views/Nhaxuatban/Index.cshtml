@model IEnumerable<webtruyentranh.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @Html.ActionLink("Thêm mới", "Create")
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="border-top-0"> Tên nhà xuất bản</th>
                            <th class="border-top-0">Địa chỉ</th>
                            <th class="border-top-0"> Điện thoại</th>
                           
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="txt-oflo"> @Html.DisplayFor(modelItem => item.TenNXB)</td>
                                <td><span class="label label-success label-rounded"> @Html.DisplayFor(modelItem => item.Diachi)</span> </td>
                                <td class="txt-oflo">@Html.DisplayFor(modelItem => item.DienThoai)</td>
                                <td><span class="font-medium">
                                   @Html.ActionLink("Sửa", "Edit", new { id = item.MaNXB }) |
                                   @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaNXB }) |
                                   @Html.ActionLink("Xóa", "Delete", new { id = item.MaNXB })
                                    </span></td>
                            </tr>

                        }
                        </tbody>
                </table>
            </div>
        </div>
    </div>