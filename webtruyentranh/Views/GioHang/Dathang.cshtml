<h1 style="text-align:center;color:red">THÔNG TIN ĐẶT HÀNG</h1>
@using webtruyentranh.Models
@{
    DocGia kh = (DocGia)Session["Taikhoan"];
}
<section id="contact">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="container">
            <div class="well well-sm">
                <h3><strong>Liên hệ với chúng tôi</strong></h3>
            </div>

            <div class="row">
                <div class="col-md-7">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.460814403367!2d106.65089901472608!3d10.775974792321833!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f19f87bfcd7%3A0x2a0d35baed5d97d9!2zMTE2LzMvOCBUaGnDqm4gUGjGsOG7m2MsIFBoxrDhu51uZyA5LCBUw6JuIELDrG5oLCBUaMOgbmggcGjhu5EgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1625896251093!5m2!1svi!2s" width="100%" height="315" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
                <div class="col-md-5">
                    <h4><strong>Liên hệ đặt hàng</strong></h4>
                    <form>
                        <table>
                            <tr style="height:40px">
                                <td>Họ tên khác hàng:</td>
                                <td style="font-weight:bold"> @kh.HoTen</td>
                            </tr>
                            <tr style="height:40px">
                                <td>Địa chỉ:</td>
                                <td style="font-weight:bold"> @kh.Diachi</td>
                            </tr>
                            <tr style="height:40px">
                                <td>Điện thoại:</td>
                                <td style="font-weight:bold"> @kh.Dienthoai</td>
                            </tr>
                            <tr style="height:40px">
                                <td>Ngày đặt hàng:</td>
                                <td style="font-weight:bold"> @DateTime.Now.ToShortDateString()</td>
                            </tr>
                            <tr style="height:40px">
                                <td>Ngày giao hàng: </td>
                                <td style="font-weight:bold">
                                    <input type="date" name="Ngaygiao" />
                                </td>
                            </tr>
                            <tr style="height:40px">
                                <td></td>

                                <td>
                                    <div  id="paypal-button-container"> <input type="submit" value="Thanh Toán" /> </div>


                                </td>
                              
                            </tr>

                        </table>

                    </form>
                </div>

            </div>
        </div>
    }
</section>
<script src="https://www.paypal.com/sdk/js?client-id=AVpareIrX5BC77DmGtyAFcEFyx_0-ZE3p-2lRr-FW3Emx3kTpoilyqYLuAw-QTIBePoOhHNPgMSUS8ua">

</script>
<script>
 paypal.Buttons({
 createOrder: function (data, actions) {
 return actions.order.create({
 purchase_units: [{
 amount: {
 value: @ViewBag.Tongtien
 }
 }]
 });
 },
 onApprove: function (data, actions) {
 return actions.order.capture().then(function (details) {
 alert('Đơn hàng đã được thanh toán thanh công. Cảm ơn bạn đã mua hàng của chúng tôi. Chúng tôi sẽ cố gắng gửi hàng cho bạn trong thời gian mà bạn yêu cầu.Xin cảm ơn!!!');
 });
 }
 }).render('#paypal-button-container');
</script>
